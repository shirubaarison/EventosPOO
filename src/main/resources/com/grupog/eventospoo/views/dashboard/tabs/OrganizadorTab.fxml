<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox fx:controller="com.grupog.eventospoo.controller.dashboardtabs.OrganizadorTabController" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" spacing="10">
    <children>
        <VBox spacing="5">
            <Text text="Adicionar Evento">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <TextField fx:id="eventNameFieldInput" promptText="Nome do Evento" />
            <TextField fx:id="eventLocationFieldInput" promptText="Local do Evento" />
            <TextField fx:id="eventDateFieldInput" promptText="Data do Evento (dd/MM/yyyy)" />
            <TextField fx:id="eventTimeFieldInput" promptText="Hora do Evento (HH:mm)" />
            <TextField fx:id="eventDescriptionFieldInput" promptText="Descrição do Evento" />
            <Button fx:id="addEventButton" text="Adicionar Evento" />
        </VBox>
        <VBox spacing="5">
            <Text text="Remover Evento">
                <font>
                    <Font size="20.0" />
                </font>
            </Text>
            <ListView fx:id="eventosListView" />
            <Button fx:id="removeEventButton" text="Remover Evento" />
        </VBox>
    </children>
</VBox>
